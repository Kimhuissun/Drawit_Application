<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.makeit.sunnycar.drawit">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="com.anroid.vending.BILLING"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.makeit.sunnycar.drawit.ui.MainActivity"
            android:theme="@style/noActionBar"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.makeit.sunnycar.drawit.ui.FillSketch"
            android:theme="@style/noActionBar"
            android:launchMode="singleInstance">

        </activity>
        <activity android:name="com.makeit.sunnycar.drawit.ui.FindContours"
            android:theme="@style/noActionBar"/>
        <activity android:name="com.makeit.sunnycar.drawit.ui.PremiumActivity"
            />
        <activity android:name="com.makeit.sunnycar.drawit.ui.CropActivity"
            android:theme="@style/noActionBar"/>
    </application>

</manifest>